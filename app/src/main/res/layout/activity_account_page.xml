<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/streetball"
    tools:context=".AccountPage">

    <TextView
        android:id="@+id/accountTitle"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="90dp"
        android:fontFamily="@font/advent_pro_medium"
        android:text="Manage My Account"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.118"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/manageUsername"
        android:layout_width="380dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:ems="10"
        android:hint="Username"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/accountTitle"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/accountUsername"
        android:layout_width="380dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="308dp"
        android:background="#77000000"
        android:fontFamily="sans-serif-condensed-light"
        android:gravity="center"
        android:text="Username:"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/accountTitle"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/manageEmail"
        android:layout_width="380dp"
        android:layout_height="40dp"
        android:layout_marginTop="70dp"
        android:background="@color/white"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/accountTitle"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/accountEmail"
        android:layout_width="380dp"
        android:layout_height="40dp"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="308dp"
        android:background="#77000000"
        android:fontFamily="sans-serif-condensed-light"
        android:gravity="center"
        android:text="Email:"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/accountTitle"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/managePassword"
        android:layout_width="380dp"
        android:layout_height="40dp"
        android:layout_marginTop="120dp"
        android:background="@color/white"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/accountTitle"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/accountPassword"
        android:layout_width="380dp"
        android:layout_height="40dp"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="308dp"
        android:background="#77000000"
        android:fontFamily="sans-serif-condensed-light"
        android:gravity="center"
        android:text="*****"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/accountTitle"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/accountEditButton"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="170dp"
        android:fontFamily="sans-serif-condensed-light"
        android:text="Edit"

        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:backgroundTint="@color/cardview_dark_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/accountTitle"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>