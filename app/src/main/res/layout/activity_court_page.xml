<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CourtPage">

    <ImageView
        android:id="@+id/courtIcon"
        android:layout_width="69dp"
        android:layout_height="64dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/map_pin_icon" />

    <fragment
        android:id="@+id/courtMap"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="448dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/courtIcon"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/addRatingButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/advent_pro_medium"
        android:text="Add rating"
        app:backgroundTint="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ratingGroup"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/courtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/aldrich"
        android:gravity="center"
        android:text="Court Name"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/courtMap"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/crowdNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/aldrich"
        android:gravity="center"
        android:text="Crowd:"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/courtName"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/courtRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/aldrich"
        android:gravity="center"
        android:text="Rating:"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/crowdNum"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/checkinButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/advent_pro_medium"
        android:text="Check in"
        android:textSize="14sp"
        app:backgroundTint="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addRatingButton"
        app:layout_constraintVertical_bias="0.0" />

    <RadioGroup
        android:id="@+id/ratingGroup"
        android:layout_width="152dp"
        android:layout_height="32dp"
        android:layout_marginTop="10dp"
        android:alpha="0.7"
        android:background="#000000"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/courtRating"
        app:layout_constraintVertical_bias="0.0">

        <RadioButton
            android:id="@+id/oneStar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:checked="true"
            android:textColor="@color/black" />

        <RadioButton
            android:id="@+id/twoStar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:textColor="@color/black" />

        <RadioButton
            android:id="@+id/threeStar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:textColor="@color/black" />

        <RadioButton
            android:id="@+id/fourStar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:textColor="@color/black" />

        <RadioButton
            android:id="@+id/fiveStar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:textColor="@color/black" />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>